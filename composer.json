{
  "name": "drupal/drupal",
  "description": "Drupal is an open source content management platform powering millions of websites and applications.",
  "type": "project",
  "license": "GPL-2.0+",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
    "require": {
    "composer/installers": "^1.2",
    "cweagans/composer-patches": "^1.6",
    "drupal-composer/drupal-scaffold": "^2.2",
    "drupal/config_direct_save": "^1.0",
    "drupal/config_installer": "^1.0",
    "drupal/console": "^1",
    "drupal/core": "^8",
    "drush/drush": "^8.1",
    "drupal/admin_toolbar": "^1.18",
    "drupal/adminimal_admin_toolbar": "^1.3",
    "drupal/block_visibility_groups": "^1.1",
    "drupal/blockgroup": "^1.0",
    "drupal/blog": "^2.0@dev",
    "drupal/bootstrap_layouts": "^4.1",
    "drupal/chosen": "^2.1",
    "drupal/ckeditor_bootstrap_buttons": "^1.1",
    "drupal/components": "^1.0",
    "drupal/ctools": "^3.0@beta",
    "drupal/devel": "^1.0@RC",
    "drupal/entityqueue": "^1.0@alpha",
    "drupal/feeds": "^3.0@dev",
    "drupal/fontawesome": "^1.0@dev",
    "drupal/layout_plugin": "^1.0@alpha",
    "drupal/libraries": "^3.0@dev",
    "drupal/menu_block": "^1.4",
    "drupal/page_manager": "^1.0@alpha",
    "drupal/panels": "^3.0@beta",
    "drupal/pathauto": "^1.0@RC",
    "drupal/redirect": "^1.0@alpha",
    "drupal/term_condition": "^1.1",
    "drupal/token": "^1.0@RC",
    "drupal/video": "^1.2",
    "drupal/video_embed_field": "^1.4",
    "drupal/views_infinite_scroll": "^1.3",
    "drupal/workbench": "^1.0@alpha",
    "drupal/workbench_access": "^1.0@alpha",
    "drupal/workbench_moderation": "^1.2",
    "webflo/drupal-finder": "^0.2.1",
    "webmozart/path-util": "^2.3",
    "wikimedia/composer-merge-plugin": "~1.3",
    "drupal/domain": "^1.0@alpha",
    "drupal/webform": "^5.0@beta",
    "rvtraveller/qs-composer-installer": "^1.1",
    "webflo/drupal-core-strict": "^8"
  },
  "require-dev": {
    "mikey179/vfsstream": "^1.2",
    "behat/behat": "3.*",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.2",
    "behat/mink-goutte-driver": "^1.2",
    "jcalderonzumba/gastonjs": "^1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
    "drupal/drupal-extension": "^3.1",
    "drush-ops/behat-drush-endpoint": "^0.0.4",
    "pantheon-systems/quicksilver-pushback": "~1",
    "phpunit/phpunit": "^4.8",
    "symfony/css-selector": "^2.8"
  },
  "conflict": {
      "drupal/drupal": "*"
  },
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "build-assets": [
      "@prepare-for-pantheon",
      "composer install --optimize-autoloader"
    ],
    "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
    "code-sniff": "echo 'No code sniff step defined.'",
    "unit-test": "echo 'No unit test step defined.'",
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
    "post-install-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-create-project-cmd": [
      "@drupal-scaffold",
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ]
  },
  "extra": {
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/profiles/easteregg_kit/modules/{$name}": ["type:drupal-module"],
      "web/profiles/{$name}": ["type:drupal-profile"],
      "web/profiles/easteregg_kit/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"],
      "web/libraries/{$name}": ["type:drupal-library"]
    },
    "build-env": {
      "install-cms": [
        "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
      ],
      "export-configuration": "drush config-export --yes"
    },
    "drupal-scaffold": {
      "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8/{version}/{path}",
      "includes": [
        "sites/default/default.services.pantheon.preproduction.yml",
        "sites/default/settings.pantheon.php"
      ],
      "excludes": [
        ".csslintrc",
        ".editorconfig",
        ".eslintignore",
        ".eslintrc.json",
        ".htaccess",
        "web.config"
      ]
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {
      "php": "7.0"
    }
  }
}
